<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:background="@drawable/drawable_form_bg"
    android:orientation="vertical">

    <com.livetechmonk.sharecontact.GridViewImage
        android:id="@+id/grid_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grid_image">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/greylight"
        android:layout_marginBottom="5dp"
        />
        <TextView
            android:id="@+id/txtimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:text="jkhdjkfhsdjfhsjdhfsdhfsdfhsdfhs"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@+id/ic_share"/>

        <ImageView
            android:id="@+id/ic_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/ic_share_black_24dp" />

    </RelativeLayout>


</RelativeLayout>